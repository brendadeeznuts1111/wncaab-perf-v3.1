{
  "worktrees": [
    {
      "name": "tes-repo",
      "path": "~/tes-repo",
      "branch": "main",
      "description": "Main TES development worktree",
      "default": true,
      "scripts": {
        "start": "bun run scripts/dev-server.ts",
        "test": "bun test",
        "lint": "bunx eslint src/**/*.ts",
        "status": "curl http://localhost:3002/api/dev/status | jq"
      },
      "environment": {
        "DEV_SERVER_PORT": "3002",
        "WORKER_API_PORT": "3003",
        "LOG_LEVEL": "debug"
      },
      "setup-worktree": [
        "bun install",
        "bun run scripts/validate-worktrees.ts"
      ]
    },
    {
      "name": "tmux-sentinel",
      "path": "~/tmux-sentinel",
      "branch": "feature/tmux-sentinel",
      "description": "Tmux orchestration feature worktree",
      "scripts": {
        "start": "bun run scripts/tmux-tes-dev.ts start",
        "attach": "bun run scripts/tmux-tes-dev.ts attach",
        "stop": "bun run scripts/tmux-tes-dev.ts stop",
        "test": "bun test tests/e2e/tmux-worktree.spec.ts"
      },
      "environment": {
        "DEV_SERVER_PORT": "3004",
        "WORKER_API_PORT": "3005",
        "LOG_LEVEL": "info",
        "ENABLE_SENTINEL_FEATURES": "true"
      },
      "setup-worktree": [
        "bun install",
        "bun run scripts/validate-worktrees.ts"
      ]
    }
  ]
}

