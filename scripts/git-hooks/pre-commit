#!/bin/bash
# Git pre-commit hook for bunfig validation
# Install: cp scripts/git-hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

echo "ğŸ” Running bunfig validation..."

if ! bun validate:bunfig; then
  echo "âŒ Bunfig validation failed. Commit aborted."
  exit 1
fi

echo "âœ… Bunfig validation passed"
exit 0

